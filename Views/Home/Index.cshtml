@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    List<string> liste = new List<string>() {"Telefon", "Tablet", "Bilgisayar"};
}

<div class="m-1 p-1 bg-primary">
    <div class="row text-white">
        <div class="col-7">
            <h4>Products</h4>
        </div>
        <div class="col-5 text-right">
            
        </div>
    </div>
</div>

<div class="m-1 p-1">
    <div class="row">
        <div class="col-3">
            <ul items="@liste"></ul>
        </div>
        <div class="col-9">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                    <th >#</th>
                    <th >Name</th>
                    <th >Price</th>
                    <th ></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.ProductId</th>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td></td>
                        </tr>   
                    }
                </tbody>
            </table>
            <a type="submit" asp-action="Create" asp-controller="Home" class="btn btn-primary">Create</a>
            <formbutton type="submit" bg-color="danger"></formbutton>
            <formbutton type="reset"></formbutton>
        </div>
    </div>
    
</div>
